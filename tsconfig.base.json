{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src": ["./src"],
      "@src/": ["./src/"],

      "@core": ["./src/core"],
      "@core/": ["./src/core/"],

      "@domain": ["./src/domain"],
      "@domain/": ["./src/domain/"],

      "@presentation": ["./src/presentation"],
      "@presentation/": ["./src/presentation/"],

      "@shared": ["./src/shared"],
      "@shared/": ["./src/shared/"],

      "@tests": ["./src/tests"],
      "@tests/": ["./src/tests/"]
    },
  },
  "include": [
    "src/*/.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
